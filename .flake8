[flake8]
max-line-length = 120

exclude =
    migrations
    __pycache__
    manage.py
    settings
    venv
    .env
    frontend/node_modules
    frontend/src

per-file-ignores =
    __init__.py: F401
    # disabled due to single line preferences
    urls.py: E501
    # disabled due to implicitly connecting signals
    apps.py: F401

# waiting on https://github.com/PyCQA/flake8/issues/234 to consolidate config files
